<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
    <shape>
        <gradient android:angle="-90"
            android:startColor="@color/theme_gray"
            android:endColor="@color/gray_1" />


        <padding
            android:bottom="2dp"
            android:left="0.5dp"
            android:right="0.5dp"
            android:top="0dp" />

        <corners android:radius="2dp" />
    </shape>
</item>

    <item>
        <shape>
            <gradient android:angle="90"
                android:startColor="@color/theme_gray"
                android:endColor="@color/gray_1" />


            <padding
                android:bottom="0dp"
                android:left="0.5dp"
                android:right="0.5dp"
                android:top="0.5dp" />

            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Background -->

    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>