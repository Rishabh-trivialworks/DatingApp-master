<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tool_bar_height"
    android:background="@color/header_bg_color"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewBack"
        style="@style/ToolBarIcon"
        android:layout_height="match_parent"
        android:src="@drawable/arrowbackapp" />

    <ImageView
        android:id="@+id/imageViewUserImage"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_default_profile_pic" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewUserName"
            style="@style/HeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text=""
            android:textAllCaps="true"/>
        <TextView
            android:id="@+id/textViewUserOnline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/taphereforgroup"
            android:ellipsize="end"
            android:maxLines="1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewUserStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Typing..."
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewOptions"
        style="@style/ToolBarIcon"
        android:layout_height="match_parent"
        android:padding="18dp"
        android:visibility="gone"
        android:src="@drawable/more" />
    <ImageView
        android:id="@+id/img_usertype"
        android:layout_width="wrap_content"
        android:src="@drawable/tick"
        android:padding="@dimen/fifteen"
        android:layout_marginRight="@dimen/five"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </ImageView>
</LinearLayout>